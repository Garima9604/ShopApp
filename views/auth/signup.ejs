<% layout('layouts/boilerplate') %>

    <div class="row form-LS">
        <div class="col-9">
            <form action="/register" method="POST">
                <h1 class="display-6 text-center">Sign-up Form</h1>

                <div class="form-floating mb-3">
                    <input type="text" class="form-control" name="username" id="username" placeholder="Username"
                        required>
                    <label for="username" class=" text-dark form-label">Username</label>
                </div>

                <div class="form-floating mb-3">
                    <input type="email" class="form-control" name="email" id="mail" placeholder="Email" required>
                    <label for="mail" class=" text-dark form-label">Email</label>
                </div>

                <div class="form-floating mb-3">
                    <input type="text" class="form-control" name="gender" id="gender" placeholder="Gender" required>
                    <label for="gender" class=" text-dark form-label">Gender</label>
                </div>

                <div class="mb-3">
                    <p class="mt-2">Want to register as?</p>
                    <div>
                        <label for="role" class="form-label">Buyer: </label>
                        <input type="radio" class="form-check-input" name="role" id="role"
                            placeholder="role of the user" value="buyer" required>

                        <label for="role" class="form-label">Seller: </label>
                        <input type="radio" class="form-check-input" name="role" id="role"
                            placeholder="role of the user" value="seller" required>
                    </div>
                </div>

                <div class="form-floating">
                    <input type="password" class="form-control" name="password" id="password" placeholder="Password"
                        required>
                    <label for="password" class=" text-dark form-label">Password</label>
                </div>

                <button type="submit" class="btn btn-sm btn-success mt-3">SIGN UP</button>
                <p class="mt-2">Already have an account? <a href="/login">Login now</a></p>
            </form>
        </div>
    </div>

    <script src="/js/script.js"></script>