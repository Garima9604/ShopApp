<%- include('../partials/header')%>
    <%- include('../partials/navbar')%>
        <%- include('../partials/flash')%>

            <div class="row products" style="margin: 101px 0 10px 10px;">

                <% for(let item of products){ %>

                    <div class="col-lg-3 col-md-6 mb-3">
                        <div class="card shadow-sm mx-auto position-relative h-100" style="width: 20rem;">
                            <img class="img" src="<%=item.img%>" class="card-img-top" alt="...">
                            <span
                                class="badge rounded-pill bg-light text-dark w-25 position-absolute translate-middle-y"
                                style="top:41%;left:5%">
                                <%=item.avgRating%> &star; | <%=item.reviews.length%>
                            </span>
                            <div class="card-body">
                                <h5 class="card-title d-flex justify-content-between align-items-center">
                                    <span>
                                        <%= item.name %>
                                    </span>
                                    <span class="btn like-btn" product-id="<%=item._id%>">
                                        <% if(currentUser && currentUser.wishlist.includes(item._id)){ %>
                                            <i class="fa-solid fa-heart"></i>
                                            <% } else{ %>
                                                <i class="fa-regular fa-heart"></i>
                                                <% } %>

                                    </span>
                                </h5>

                                <p class="card-text fw-light">
                                    <%= item.desc %>
                                </p>
                                <% if(item.reviews.length){ %>
                                    <p class="text-muted">
                                        <%=item.reviews.length%> reviews
                                    </p>
                                    <%}else{%>
                                        <p class="text-muted">No reviews</p>
                                        <% } %>
                                            <h5 class="card-title"><span
                                                    class="fw-lighter fs-6 text-decoration-line-through"> Rs: <%=
                                                        item.price*2 %></span>
                                                Rs: <%= item.price %><span class="fw-light fs-6 text-warning">( 50 % OFF
                                                        )</span>
                                            </h5>

                                            <a href="/products/<%=item._id%>" class="btn btnn btn-primary">View
                                                Product</a>
                            </div>
                        </div>
                    </div>

                    <% } %>
            </div>

            <script src="/js/common.js"></script>

            <%- include('../partials/footer')%>